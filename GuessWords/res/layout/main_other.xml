<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
      <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="25dp"
        android:text="@string/string1"
        android:textSize="20sp" 
        android:textColor="#0099FF"/>

    <TextView
        android:id="@+id/textView_words_other"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView1"
        android:layout_centerHorizontal="true"
        android:text="TextView"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/editText_words_other"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView1"
        android:layout_below="@+id/textView1"
        android:layout_marginTop="28dp"
        android:ems="10" 
        android:hint="@string/hint"
        android:singleLine="true">

        <requestFocus />
    </EditText>

    <Button
        android:id="@+id/button_ok_other"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/editText_words_other"
        android:layout_alignBottom="@+id/editText_words_other"
        android:layout_toRightOf="@+id/editText_words_other"
        android:background="@drawable/button"
        android:text="@string/button" />

</RelativeLayout>
